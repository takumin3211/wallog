{
    "name": "microblog-app",
    "version": "1.0.0",
    "description": "A single-user microblog application built with Node.js, React, Express, TailwindCSS, and PostgreSQL",
    "main": "index.js",
    "scripts": {
      "start": "node index.js",
      "dev": "nodemon index.js",
      "client": "cd client && npm start",
      "server": "nodemon server/index.js",
      "build": "cd client && npm run build",
      "install-client": "cd client && npm install",
      "install-server": "cd server && npm install",
      "docker:build": "docker-compose build",
      "docker:up": "docker-compose up",
      "docker:down": "docker-compose down"
    },
    "dependencies": {
      "axios": "^1.5.0",
      "express": "^4.18.2",
      "pg": "^8.11.0",
      "dotenv": "^16.3.1",
      "cors": "^2.8.5",
      "concurrently": "^7.6.0",
      "express-session": "^1.17.3",
      "marked": "^5.0.2",
      "next": "13.4.5",
      "pg-hstore": "^2.3.4",
      "react": "18.2.0",
      "react-dom": "18.2.0",
      "react-router-dom": "^6.14.1",
      "tailwindcss": "^3.3.2"
    },
    "devDependencies": {
      "nodemon": "^3.0.1"
    },
    "engines": {
      "node": "22.x"
    },
    "keywords": [
      "microblog",
      "nodejs",
      "express",
      "react",
      "tailwindcss",
      "postgresql"
    ],
    "author": "Your Name",
    "license": "MIT"
  }
  